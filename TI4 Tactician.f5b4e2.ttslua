local eBezTypes = {
  SHIFT = function() return "SHIFT" end,
  SWAP = function() return "SWAP" end,
  JUMP = function() return "JUMP" end
}
--Bez[planetCount][BezType].getCurve(pIndex, +/-) --all values multiplied by 4.4
local Bez = {
  scaleMod = 4.4,
  [1] = {},
