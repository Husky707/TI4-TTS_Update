function _endStatusPhaseCoroutine()
    recomputeInfluence(true)
    coroutine.yield(0)

    resetAgendaTokens()
    coroutine.yield(0)

    moveSpeakerAgendaToken()
    coroutine.yield(0)

    _returnCommandTokens()
    coroutine.yield(0)

    _allocateCommandTokens()
    coroutine.yield(0)

    _readyCards()
    coroutine.yield(0)

    _repairUnits()
    coroutine.yield(0)

    _returnStrategyCards()
    coroutine.yield(0)

    _dealMinisterOfPolicyActionCard()
    coroutine.yield(0)

    Global.call("setPhase")
    return 1
end

